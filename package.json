{
  "name": "hanuljari-remodel",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --strictPort --port 5173",
    "scrape": "node scripts/scrape.mjs",
    "assemble": "node scripts/assemble.mjs",
  "fetch:all": "npm run scrape && npm run assemble",
