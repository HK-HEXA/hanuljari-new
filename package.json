    "serve:public": "npx http-server public -p 5173"
  },
  "devDependencies": {
    "sass": "^1.77.0",
    "vite": "^5.3.0",
    "cheerio": "^1.0.0",
    "node-fetch": "^3.3.2",
    "iconv-lite": "^0.6.3"
  }
}
